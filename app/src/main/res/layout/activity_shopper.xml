<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shoper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result"
    android:background="@color/backColor"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_marginStart="60dp"
                app:srcCompat="@drawable/thir" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:autoLink="phone"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:shadowDx="@dimen/material_emphasis_medium"
                android:text="@string/marzota_t_shirt"
                android:textColor="#9057C2"
                android:fontFamily="@font/rt"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="1dp"
                android:autoLink="phone"
                android:gravity="center"
                android:shadowColor="#FFFFFF"
                android:shadowDx="@dimen/material_emphasis_medium"
                android:text="2000 $"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/rt"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="300dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:layout_height="200dp"
                android:layout_marginStart="60dp"
                app:srcCompat="@drawable/marrrr" />



            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="300dp"
                android:layout_marginTop="100dp"
                android:layout_height="200dp"
                android:layout_marginStart="60dp"
                android:gravity="center"
                app:srcCompat="@drawable/krugig" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="300dp"
                android:layout_marginTop="100dp"
                android:layout_height="200dp"
                android:layout_marginStart="60dp"
                android:gravity="center"
                app:srcCompat="@drawable/cap" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="300dp"
                android:layout_marginTop="100dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_marginStart="60dp"
                app:srcCompat="@drawable/ererer" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>